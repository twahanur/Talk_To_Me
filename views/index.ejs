<%- include('./partials/header.ejs'); %>

    <div id="login-container">
      <div id="left-column"></div>
      <div id="branding">
        <img src="./images/logo.png" />
        <h1>Login - Talk To Me</h1>
      </div>
      <div id="login-form">
        <form method="post" action="/">
          <input
            type="text"
            name="username"
            placeholder="enter mobile or email"
            value="<%= data.username %>"
          />
          <% if (errors.username) { %>
            <p class="error show"><%= errors.username.msg %></p>
          <% } %>
          <input type="password" name="password" placeholder="enter password" />
          <% if (errors.password) { %>
            <p class="error show"><%= errors.password.msg %></p>
          <% } %>

          <% if (errors.common) { %>
            <p class="error show"><%= errors.common.msg %></p>
          <% } %>
          <input type="submit" value="Login" />
          
        </form>
        <p class="center">Did not have any account? <span><a href="#" onclick="openModal()">Register</a></span></p>
        <div class="new-user">
          
        </div>
        <%- include('./partials/add-user-modal.ejs'); %>
      </div>
    </div>
  </body>
</html>
